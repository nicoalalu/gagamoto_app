generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── NextAuth required tables ──────────────────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Application models ────────────────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())

  accounts       Account[]
  sessions       Session[]
  asistencias    Asistencia[]
  votosGiven     VotoMvp[]
  calificaciones Calificacion[]
  jugador        Jugador?
}

model Torneo {
  id          String    @id @default(cuid())
  nombre      String
  fechaInicio DateTime?
  fechaFin    DateTime?
  createdAt   DateTime  @default(now())

  partidos Partido[]
}

model Partido {
  id           String    @id @default(cuid())
  torneoId     String?
  equipo1      String
  equipo2      String
  fecha        DateTime?
  lugar        String?
  golesEquipo1 Int?
  golesEquipo2 Int?
  jugado       Boolean   @default(false)
  mvpJugadorId String?
  createdAt    DateTime  @default(now())

  torneo      Torneo?        @relation(fields: [torneoId], references: [id], onDelete: SetNull)
  mvpJugador  Jugador?       @relation("MvpRelation", fields: [mvpJugadorId], references: [id], onDelete: SetNull)
  asistencias Asistencia[]
  goles       Gol[]
  tarjetas    Tarjeta[]
  votos       VotoMvp[]
  calificaciones Calificacion[]
}

model Jugador {
  id              String  @id @default(cuid())
  nombre          String
  apellido        String
  numeroCamiseta  Int?
  userId          String? @unique

  user           User?          @relation(fields: [userId], references: [id], onDelete: SetNull)
  goles          Gol[]
  tarjetas       Tarjeta[]
  votosMvp       VotoMvp[]
  calificaciones Calificacion[]
  mvpPartidos    Partido[]      @relation("MvpRelation")

  @@unique([nombre, apellido])
}

model Asistencia {
  id        String          @id @default(cuid())
  partidoId String
  userId    String
  estado    EstadoAsistencia
  updatedAt DateTime        @updatedAt

  partido Partido @relation(fields: [partidoId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([partidoId, userId])
}

model Gol {
  id        String  @id @default(cuid())
  partidoId String
  jugadorId String
  minuto    Int?
  equipo    String?

  partido Partido @relation(fields: [partidoId], references: [id], onDelete: Cascade)
  jugador Jugador @relation(fields: [jugadorId], references: [id], onDelete: Cascade)
}

model Tarjeta {
  id        String     @id @default(cuid())
  partidoId String
  jugadorId String
  tipo      TipoTarjeta
  minuto    Int?

  partido Partido @relation(fields: [partidoId], references: [id], onDelete: Cascade)
  jugador Jugador @relation(fields: [jugadorId], references: [id], onDelete: Cascade)
}

model VotoMvp {
  id        String @id @default(cuid())
  partidoId String
  userId    String
  jugadorId String

  partido Partido @relation(fields: [partidoId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  jugador Jugador @relation(fields: [jugadorId], references: [id], onDelete: Cascade)

  @@unique([partidoId, userId])
}

model Calificacion {
  id        String @id @default(cuid())
  partidoId String
  userId    String
  jugadorId String
  puntaje   Int

  partido Partido @relation(fields: [partidoId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  jugador Jugador @relation(fields: [jugadorId], references: [id], onDelete: Cascade)

  @@unique([partidoId, userId, jugadorId])
}

// ─── Enums ─────────────────────────────────────────────────────────────────

enum EstadoAsistencia {
  SI
  NO
}

enum TipoTarjeta {
  AMARILLA
  ROJA
}

