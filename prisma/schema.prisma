generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── NextAuth required tables ──────────────────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Application models ────────────────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())

  accounts        Account[]
  sessions        Session[]
  attendance      Attendance[]
  goals           Goal[]
  cards           Card[]
  votesGiven      MvpVote[]  @relation("VoterRelation")
  votesReceived   MvpVote[]  @relation("VotedRelation")
  ratingsGiven    Rating[]   @relation("RaterRelation")
  ratingsReceived Rating[]   @relation("RatedRelation")
  mvpWins         Match[]    @relation("MvpRelation")
}

model Match {
  id           String    @id @default(cuid())
  date         DateTime
  opponent     String
  goalsFor     Int?
  goalsAgainst Int?
  mvpUserId    String?
  createdAt    DateTime  @default(now())

  mvpUser    User?        @relation("MvpRelation", fields: [mvpUserId], references: [id])
  attendance Attendance[]
  goals      Goal[]
  cards      Card[]
  mvpVotes   MvpVote[]
  ratings    Rating[]
}

model Attendance {
  id        String           @id @default(cuid())
  matchId   String
  userId    String
  status    AttendanceStatus
  excuse    String?
  updatedAt DateTime         @updatedAt

  match Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([matchId, userId])
}

model Goal {
  id      String @id @default(cuid())
  matchId String
  userId  String

  match Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Card {
  id      String   @id @default(cuid())
  matchId String
  userId  String
  type    CardType

  match Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MvpVote {
  id          String @id @default(cuid())
  matchId     String
  voterId     String
  votedUserId String

  match     Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  voter     User  @relation("VoterRelation", fields: [voterId], references: [id], onDelete: Cascade)
  votedUser User  @relation("VotedRelation", fields: [votedUserId], references: [id], onDelete: Cascade)

  @@unique([matchId, voterId])
}

model Rating {
  id          String @id @default(cuid())
  matchId     String
  raterId     String
  ratedUserId String
  score       Int

  match     Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  rater     User  @relation("RaterRelation", fields: [raterId], references: [id], onDelete: Cascade)
  ratedUser User  @relation("RatedRelation", fields: [ratedUserId], references: [id], onDelete: Cascade)

  @@unique([matchId, raterId, ratedUserId])
}

// ─── Enums ─────────────────────────────────────────────────────────────────

enum AttendanceStatus {
  YES
  NO
}

enum CardType {
  YELLOW
  RED
}
